<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="inherit_library_book_category_views_form" model="ir.ui.view">
            <field name="name">library book category form</field>
            <field name="model">library.book.category</field>
            <field name="inherit_id" ref="library.library_book_category_view_form"/>
            <field name="arch" type="xml">
                    <xpath expr="//field[@name='parent_category_id']" position="after">
                            <field name="max_borrow_days"/>
                    </xpath>
            </field>
        </record>
    </data>
</odoo>